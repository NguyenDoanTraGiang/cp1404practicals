BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 48
            text: '34'
            size_hint_x: 3
            on_text_validate: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 34
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 34
                on_press: app.handle_increment(-1)

    Button:
        text: 'Convert mi to km'
        font_size: 34
        on_press: app.convert_mi_km(int(input_number.text))
    Label:
        id: output_label
        font_size: 48
        text: app.default
        color: (1, 1, 0, 1)